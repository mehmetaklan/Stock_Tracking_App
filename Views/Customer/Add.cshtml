
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group mx-5" method="post">
    <!-- Name input -->
    <div data-mdb-input-init class="form-outline mb-4">
        <input type="text" id="FirstName" name="CustomerFname" class="form-control" />
        <label class="form-label" for="FirstName">Yeni Müşteri Adı</label>
    </div>
    <div data-mdb-input-init class="form-outline mb-4">
        <input type="text" id="LastName" name="CustomerLname" class="form-control" />
        <label class="form-label" for="LastName">Yeni Müşteri Soyadı</label>
    </div>

    <!-- Submit button -->
    <div style="width:100%" class="justify-content-center align-content-center">
        <button data-mdb-ripple-init type="submit" class="btn btn-primary input-group btn-block mb-4">Ekle</button>
    </div>
</form>
